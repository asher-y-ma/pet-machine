---
import Layout from '~/layouts/PageLayout.astro';

import Header from '~/components/widgets/Header.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import Features from '~/components/widgets/Features.astro';
import Content from '~/components/widgets/Content.astro';

import { headerData } from '~/navigation';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';

const metadata = {
  title: 'Most Popular Plastic Label Removal Machine',
};
---

<Layout metadata={metadata}>
  <Fragment slot="header">
    <Header
      {...headerData}
      actions={[
        {
          variant: 'secondary',
          text: 'Login',
          href: '#',
        },
        {
          variant: 'primary',
          text: 'Sign Up',
          href: '#',
        },
      ]}
      isSticky
    />
  </Fragment>

  <!-- Hero2 Widget ******************* -->

  <Hero2
    tagline="Label Remover"
    actions={[
      { variant: 'primary', target: '_blank', text: 'Contact Us', href: '/contact' },
      { text: 'Learn more', href: '#features' },
    ]}
    image={{
      src: '~/assets/images/remover/label11.jpg',
      alt: 'Label Remover',
    }}
  >
    <Fragment slot="title">
      Bottle Label Remover Machine
    </Fragment>

    <Fragment slot="subtitle">
      The label removing machine boasts a high label removal ratio with a low bottle damage ratio, ensuring optimal results in PET recycling processes.
    </Fragment>
  </Hero2>

  <!-- Features Widget *************** -->

  <Features
    id="features"
    title="Product Features"
    subtitle="Each of the following features enhances our value proposition."
    columns={2}
    items={[
      {
        title: 'High Label Removing Ratio',
        description:
          'The machine boasts a high efficiency in removing labels with minimal damage to bottles.',
        icon: 'tabler:layers-union',
      },
      {
        title: 'Versatile Application',
        description: `Suitable for a variety of bottle types, enhancing its utility across different recycling needs.`,
        icon: 'tabler:artboard',
      },
      {
        title: 'Patented Technology',
        description:
          `Features a unique blade quantity and shape that is patented, indicating innovation and quality.`,
        icon: 'tabler:writing',
      },
      {
        title: 'Ease of Maintenance',
        description: `The machine is equipped with replaceable blades, facilitating easy replacement and labor-saving maintenance.`,
        icon: 'tabler:podium',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    title="Use Cases"
    subtitle="The Label Remover Machine efficiently strips labels from plastic bottles, like those used for mineral water, without damaging the bottles. It enhances recycling quality by preparing bottles for further processing, making it vital for sustainable operations."
    isReversed
    items={[
      {
        title: 'PET Bottles:',
      },
    ]}
    image={{
      src: '~/assets/images/remover/remover.png',
      alt: 'Label Remover',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        PET Water Bottles
      </h3>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <BlogLatestPosts
    title="Find out more content"
    information={`The blog is used to display out news.`}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </BlogLatestPosts>
</Layout>
