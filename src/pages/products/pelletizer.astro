---
import Layout from '~/layouts/PageLayout.astro';

import Header from '~/components/widgets/Header.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import Features from '~/components/widgets/Features.astro';
import Content from '~/components/widgets/Content.astro';

import { headerData } from '~/navigation';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';

const metadata = {
  title: 'Plastic Recycling Pelletizer',
};
---

<Layout metadata={metadata}>
  <Fragment slot="header">
    <Header
      {...headerData}
      actions={[
        {
          variant: 'secondary',
          text: 'Login',
          href: '#',
        },
        {
          variant: 'primary',
          text: 'Sign Up',
          href: '#',
        },
      ]}
      isSticky
    />
  </Fragment>

  <!-- Hero2 Widget ******************* -->

  <Hero2
    tagline="Plastic Recycling Pelletizer"
    actions={[
      { variant: 'primary', target: '_blank', text: 'Contact Us', href: '/contact' },
      { text: 'Learn more', href: '#features' },
    ]}
    image={{
      src: '~/assets/images/products/pelletizer/zaoliji2.jpg',
      alt: 'Plastic Recycling Pelletizer',
    }}
  >
    <Fragment slot="title">
      Hot Sale Pelletizer
    </Fragment>

    <Fragment slot="subtitle">
      Transform plastic waste into high-value pellets using our pelletizer machine. 
    </Fragment>
  </Hero2>

  <!-- Features Widget *************** -->

  <Features
    id="features"
    title="Product Features"
    subtitle="Each of the following features enhances our value proposition."
    columns={2}
    items={[
      {
        title: 'Dual-Stage Granulation Process',
        description:
          'The machine is engineered with a dual-stage pelletizing system that operates more stably and produces cleaner, denser pellets, even with materials containing heavy impurities.',
        icon: 'tabler:layers-union',
      },
      {
        title: 'Sophisticated Filtration and Degassing',
        description: `It incorporates a double filtration system and a triple degassing process, ensuring the final product is of the highest purity and quality.`,
        icon: 'tabler:artboard',
      },
      {
        title: 'Customized Screw Extruder',
        description:
          `The inclusion of a specially designed screw extruder allows for the reliable and stable quality of the final granules.`,
        icon: 'tabler:writing',
      },
      {
        title: 'High-Capacity Output',
        description: `Capable of processing 500kg/h, the machine meets the demands of large-scale recycling operations.`,
        icon: 'tabler:podium',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    title="Pictures"
    subtitle="This advanced production line takes cleaned polypropylene (PP) and polyethylene (PE) materials from previous stages of the washing process and converts it into reusable pellets ready for new manufacturing applications."
    isReversed
    items={[
      {
        // title: 'Description:',
        description:
          'We have a global footprint, serving over 40 clients across the Middle East, Africa, South America, Southeast Asia, South Asia, and the USA, making it a truly international brand.',
      },
      // {
      //   title: 'Benefits:',
      //   description: `Allow startups to quickly create professional websites without investing extensive time and resources. <br /> Make a memorable first impression with visually appealing design elements that highlight your startup's unique value proposition. <br /> Ensures your website looks stunning and works well on all devices. <br /> Engage potential investors and customers with engaging content, clear messaging, and intuitive navigation.`,
      // },
    ]}
    image={{
      src: '~/assets/images/products/pelletizer/1.jpg',
      alt: 'Plastic Pelletizer',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Global Clients
      </h3>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent={true}
    items={[
      {
        // title: 'Description:',
        description: `We holds thirteen patents and certifications, validating the machine's innovative design and functionality.`,
      },
      // {
      //   title: 'Benefits:',
      //   description: `Ensuring a cohesive and user-centric design for your SaaS website. <br /> Effectively communicate complex SaaS features through visual aids, animations, and interactive elements. <br /> Prioritize user needs and pain points through well-structured layouts and clear navigation. <br /> Encourage visitors to take action with strategically placed CTAs. <br /> Ensures your SaaS website works seamlessly across all devices.`,
      // },
    ]}
    image={{
      src: '~/assets/images/products/pelletizer/2.jpg',
      alt: 'Plastic Pelletizer',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Patented Technology
      </h3>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isReversed
    isAfterContent={true}
    items={[
      {
        // title: 'Description:',
        description: `With a total energy consumption of 135kw/h, the machine is designed to be energy-efficient, aligning with the modern focus on sustainability.`,
      },
      // {
      //   title: 'Benefits:',
      //   description: `Serve as a captivating backdrop to showcase your creative work, capturing attention and leaving a lasting impression. <br /> Tailor your portfolio to reflect your unique style and artistic vision. <br /> Prioritizes visuals, allowing you to present your work in high-resolution detail that draws viewers into your creations. <br /> Enables seamless navigation for effortless portfolio exploration.`,
      // },
    ]}
    image={{
      src: '~/assets/images/products/pelletizer/4.jpg',
      alt: 'Plastic Pelletizer',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Energy-Efficient Operation
      </h3>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

