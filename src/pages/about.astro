---
import Hero from '~/components/widgets/Hero.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'About Us',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="About Us"
    image={{
      src: '~/assets/images/about.jpeg',
      alt: 'Caos Image',
    }}
  >
    <Fragment slot="title">
      Plastic Recycling Machine and Solution from China
    </Fragment>

    <Fragment slot="subtitle">
      We are a leading supplier of plastic machinery from China, offering a wide range of equipment, including plastic crushers, washing machines, sorting machines, pelletizers, and more. We also provide complete production line solutions for the plastic recycling industry.
    </Fragment>
  </Hero>

</Layout>
