---
import Layout from '~/layouts/PageLayout.astro';

import Header from '~/components/widgets/Header.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import Features from '~/components/widgets/Features.astro';
import Content from '~/components/widgets/Content.astro';

import { headerData } from '~/navigation';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';

const metadata = {
  title: 'PP PE Plastic Recycling Line',
};
---

<Layout metadata={metadata}>
  <Fragment slot="header">
    <Header
      {...headerData}
      actions={[
        {
          variant: 'secondary',
          text: 'Login',
          href: '#',
        },
        {
          variant: 'primary',
          text: 'Sign Up',
          href: '#',
        },
      ]}
      isSticky
    />
  </Fragment>

  <!-- Hero2 Widget ******************* -->

  <Hero2
    tagline="PP PE Plastic Recycling Line"
    actions={[
      { variant: 'primary', target: '_blank', text: 'Contact Us', href: '/contact' },
      { text: 'Learn more', href: '#features' },
    ]}
    image={{
      src: '~/assets/images/pp_pe_washing_line/pp_pe_washing_line.jpg',
      alt: 'PP PE Plastic Recycling Line',
    }}
  >
    <Fragment slot="title"> PP PE Bottle Washing Line </Fragment>

    <Fragment slot="subtitle">
      Optimize your plastic bottle recycling process with our PP PE Bottle Washing Line. This advanced washing line is
      designed specifically for cleaning polypropylene (PP) and polyethylene (PE) bottles, effectively removing dirt,
      label residues, and other contaminants.
    </Fragment>
  </Hero2>

  <!-- Features Widget *************** -->

  <Features
    id="features"
    title="Product Features"
    subtitle="Each of the following features enhances our value proposition."
    columns={2}
    items={[
      {
        title: 'Machine Components',
        description:
          'The line includes a crusher, floating rinsing tank, cold & hot washer, friction cleaning equipment, dryer machine, and a storage silo.',
        icon: 'tabler:layers-union',
      },
      {
        title: 'Design Customization',
        description: `Tailored to the cleanliness of the processed material and can be arranged in "L" or "U" shape to fit client's workshop.`,
        icon: 'tabler:artboard',
      },
      {
        title: 'Capacity Range',
        description: `Available in various sizes to match production needs, from 300 kg/h to 3000 kg/h.`,
        icon: 'tabler:writing',
      },
      {
        title: 'Blade Material',
        description: `Utilizes SKD-11 or D2 for durability and performance.`,
        icon: 'tabler:podium',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    title="Pictures"
    isReversed
    items={[
      {
        title: 'High Compatibility',
        description:
          'Designed to sort and process over 10 types of plastic materials, including PP/PE, HDPE, and LDPE.',
      },
      {
        title: 'Efficient Processing:',
        description: `Capable of producing clean film flakes from waste materials, with a high output rate of up to 3000 kg/h.`,
      },
      {
        title: 'Automated Operation',
        description:
          'The line operates with minimal labor, featuring automatic feeding and discharging systems, and low maintenance requirements.',
      },
    ]}
    image={{
      src: '~/assets/images/pp_pe_washing_line/2.jpg',
      alt: 'Startup Image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Integrated Manufacturing</h3>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- BlogLatestPost Widget **************** -->

  <BlogLatestPosts
    id="blog"
    title="Stay informed with AstroWind's blog"
    information={`Explore our collection of articles, guides, and tutorials on web development, design trends, and using AstroWind effectively for your projects.`}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </BlogLatestPosts>
</Layout>
